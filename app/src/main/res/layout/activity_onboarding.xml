<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="@dimen/screen_padding"
    tools:context=".OnboardActivity">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/a"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/lady"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.341"
        app:shapeAppearanceOverlay="@style/circleImageView"
        app:strokeColor="@android:color/darker_gray" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/b"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/lady"
        app:layout_constraintCircle="@id/a"
        app:layout_constraintCircleAngle="30"
        app:layout_constraintCircleRadius="300dp"
        app:shapeAppearanceOverlay="@style/circleImageView"
        app:strokeColor="@android:color/darker_gray"
        tools:layout_editor_absoluteX="256dp"
        tools:layout_editor_absoluteY="110dp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/c"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/lady"
        app:layout_constraintCircle="@id/a"
        app:layout_constraintCircleAngle="330"
        app:layout_constraintCircleRadius="180dp"
        app:shapeAppearanceOverlay="@style/circleImageView"
        app:strokeColor="@android:color/darker_gray"
        tools:layout_editor_absoluteX="121dp"
        tools:layout_editor_absoluteY="251dp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/d"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/lady"
        app:layout_constraintCircle="@id/a"
        app:layout_constraintCircleAngle="150"
        app:layout_constraintCircleRadius="200dp"
        app:shapeAppearanceOverlay="@style/circleImageView"
        app:strokeColor="@android:color/darker_gray"
        tools:layout_editor_absoluteX="121dp"
        tools:layout_editor_absoluteY="251dp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/e"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/lady"
        app:layout_constraintCircle="@id/a"
        app:layout_constraintCircleAngle="210"
        app:layout_constraintCircleRadius="200dp"
        app:shapeAppearanceOverlay="@style/circleImageView"
        app:strokeColor="@android:color/darker_gray"
        tools:layout_editor_absoluteX="121dp"
        tools:layout_editor_absoluteY="251dp" />

</androidx.constraintlayout.widget.ConstraintLayout>